			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:utils="clr-namespace:HWdB.Utils"
             xmlns:local="clr-namespace:HWdB"
			 Height="500"
		Background="WhiteSmoke"
		HorizontalAlignment="Stretch" 
		VerticalAlignment="Stretch">
    <UserControl.Resources>
        <SolidColorBrush x:Key="brushWatermarkBackground" Color="White" />
        <SolidColorBrush x:Key="brushWatermarkForeground" Color="LightSteelBlue" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <utils:TextInputToVisibilityConverter x:Key="TextInputToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <TextBlock
            Margin="10"
            FontWeight="Bold"
            FontSize="20"
            Text="{Binding RepairPossible}"
            />
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
        </Grid>
        <Viewbox Stretch="Uniform">
            <Grid Height="190">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Viewbox>
        <Viewbox Stretch="Uniform">
            <Grid Height="190">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid Row ="0" Column="1">
                    <Border BorderBrush='White'  BorderThickness='1,1,0,0'>
                        <Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
                    </Border>
                </Grid>
                <Label Grid.Row="0" Grid.Column="1" Padding="0,0,0,3" Margin="0,1,1,0" HorizontalAlignment="Center" Content="{Binding ButtonName}" FontSize="10" FontWeight="Bold"/>
            </Grid>
        </Viewbox>
        <Viewbox Stretch="Uniform">
            <Grid Height="190">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <Grid Row="3"  Column="0">
                    <Border BorderBrush='White'  BorderThickness='1,1,0,0'>
                        <Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
                    </Border>
                </Grid>
                <Label Grid.Row="3"  Grid.Column="0" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Confidence Level:" FontSize="4" FontWeight="Bold" />
                <Grid Grid.Row="3"  Grid.Column="1" Background="{StaticResource brushWatermarkBackground}" >
                </Grid>
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='1,1,1,1'  Grid.Row="3" Grid.Column="1">
                    <ComboBox  Text="{Binding ConfidenceLevel}" Name="ConfidenceLevel" FontSize="5" FontWeight="Bold"   Padding="8,1,0,0" Width="40" Height="10">
                        <ComboBoxItem>60%</ComboBoxItem>
                        <ComboBoxItem>70%</ComboBoxItem>
                        <ComboBoxItem>80%</ComboBoxItem>
                        <ComboBoxItem>90%</ComboBoxItem>
                        <ComboBoxItem>95%</ComboBoxItem>
                        <ComboBoxItem>99,5%</ComboBoxItem>
                    </ComboBox>
                </Border>
                <Label Grid.Row="3"  Grid.Column="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Repair Lead Time [2 - 365]:" FontSize="4" FontWeight="Bold" />
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='1,1,1,1'  Grid.Row="3" Grid.Column="3">
                    <TextBox  x:Name="RepairLeadTime" Text="{Binding RepairLeadTime}"  Padding="8,1,0,0" FontSize="5" FontWeight="Bold" Width="30" Height="10" />
                </Border>
                <Grid Row="3"  Column="4">
                    <Border BorderBrush='White'  BorderThickness='1,1,0,0'>
                        <Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
                    </Border>
                </Grid>
                <Label Grid.Row="3"  Grid.Column="4" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Repair possible:" FontSize="4" FontWeight="Bold" />
                <Grid Grid.Row="3" Grid.Column="5">
                    <Viewbox Height="8">
                        <RadioButton IsChecked="{Binding IsYes}" GroupName="RepairPossible" FontSize="8" FontWeight="Bold" >Yes</RadioButton>
                    </Viewbox>
                </Grid>
                <Grid Grid.Row="3" Grid.Column="6">
                    <Viewbox Height="8">
                        <RadioButton IsChecked="{Binding IsNo}" GroupName="RepairPossible"  FontSize="8" FontWeight="Bold">No</RadioButton>
                    </Viewbox>
                </Grid>
                <Grid Row="5"  Column="0">
                    <Border BorderBrush='White'  BorderThickness='1,1,0,0'>
