                    <TextBox TabIndex="50"  BorderThickness="1"  x:Name="Stock" Text="{Binding Stock}" Padding="0,0,0,0"  FontSize="4" FontWeight="Bold"  IsReadOnly="True"  Height="10" />
				</Border>
				<Grid Row="13"  Column="6">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
                <Label Grid.Row="13"  Grid.Column="6" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Safety Margin:" FontSize="4" FontWeight="Bold"  Height="10" />
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="13" Grid.Column="7">
                    <TextBox TabIndex="51"  BorderThickness="1"  x:Name="Safety" Text="{Binding Safety}" Padding="0,0,0,0" FontSize="4" FontWeight="Bold"  IsReadOnly="True"  Height="10" />
				</Border>

				<Grid Row="14"  Column="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
                <Label Grid.Row="14"  Grid.Column="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Failed:" FontSize="4" FontWeight="Bold"  Height="10"  />
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="14" Grid.Column="3">
                    <TextBox TabIndex="52"  BorderThickness="1"  x:Name="Failed" Text="{Binding Failed}" Padding="0,0,0,0"  FontSize="4" FontWeight="Bold"  IsReadOnly="True"  Height="10" />
				</Border>
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="14" Grid.Column="3">
				</Border>
				<Grid Row="14"  Column="4">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
                <Label Grid.Row="14"  Grid.Column="4" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Repaired:" FontSize="4" FontWeight="Bold"  Height="10" />
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="14" Grid.Column="5">
                    <TextBox TabIndex="53"  BorderThickness="1"  x:Name="Repaired" Text="{Binding Repaired}" Padding="0,0,0,0"  FontSize="4" FontWeight="Bold" IsReadOnly="True"  Height="10" />
				</Border>
				<Grid Row="14"  Column="6">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
                <Label Grid.Row="14"  Grid.Column="6" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Lost:" FontSize="4" FontWeight="Bold"  Height="10"  />
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="14" Grid.Column="7">
                    <TextBox TabIndex="54"  BorderThickness="1"  x:Name="Lost" Text="{Binding Lost}" Padding="0,0,0,0"  FontSize="4" FontWeight="Bold"  IsReadOnly="True"  Height="10" />
				</Border>
			 </Grid>
		</Viewbox>
		<Viewbox Stretch="Uniform">
			<Grid Height="250">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="12"/>
					<RowDefinition Height="12"/>
					<RowDefinition Height="6"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="33"/>
					<ColumnDefinition Width="27"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="30"/>
				</Grid.ColumnDefinitions>
                <TextBlock Grid.Row="5" Grid.Column="9" Margin="10,4,0,0" Grid.ColumnSpan="2" HorizontalAlignment="Left"
			FontWeight="Bold"
            Foreground="Red"
			FontSize="5"
			Text="{Binding ShowRepairPossible}"
			/>
                <Grid Row="6"  Column="7" Grid.ColumnSpan="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="6"  Grid.Column="7" Grid.ColumnSpan="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Repair possible:" FontSize="4" FontWeight="Bold" Width="30"/>
				<Grid Grid.Row="6" Grid.Column="9">
					<Viewbox Height="8">
                        <RadioButton  TabIndex="7" IsChecked="{Binding RepairIsPossible}" GroupName="RepairPossible" FontSize="7" FontWeight="Bold" Padding="0,2,0,0" >Yes</RadioButton>
					</Viewbox>
				</Grid>
				<Grid Grid.Row="6" Grid.Column="10">
					<Viewbox Height="8">
                        <RadioButton TabIndex="8" IsChecked="{Binding RepairNotPossible}" GroupName="RepairPossible"  FontSize="7" FontWeight="Bold" Padding="0,2,0,0">No</RadioButton>
					</Viewbox>
				</Grid>
                <Button Name="Calculate" Command="{Binding CalculateCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11"  Grid.Row="13" Grid.Column="8" HorizontalAlignment="Right"  FontSize="4" FontWeight="Bold">Calculate</Button>
                <Button  Name="Clear" Command="{Binding ClearCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11"  Grid.Row="13" Grid.Column="9" HorizontalAlignment="Right"  FontSize="4" FontWeight="Bold">Clear</Button>
                <Button  Name="NewLtbDataSet" Command="{Binding NewLtbDataSetCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11"  Grid.Row="14" Grid.Column="8" HorizontalAlignment="Right"  FontSize="4" FontWeight="Bold">New</Button>
                <Button  Name="Delete" Command="{Binding DeleteCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11"  Grid.Row="14" Grid.Column="9" HorizontalAlignment="Right"  FontSize="4" FontWeight="Bold">Delete</Button>
			</Grid>
		</Viewbox>
		<Viewbox Stretch="Uniform" Margin="10,0,-10,0">
			<Grid Height="250" DataContext="{Binding CurrentLtbDataSet}">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="14"/>
					<RowDefinition Height="190"/>
				</Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>
                <Image Name="Chart" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="10" Source="{Binding LtbChart}" Width="500" Height="85"/>
			</Grid>
		</Viewbox>
	</Grid>
</UserControl>
