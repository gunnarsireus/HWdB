<UserControl x:Class="HWdB.Views.LTBView"
             x:Name="This"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:utils="clr-namespace:HWdB.Utils"
			 xmlns:local="clr-namespace:HWdB"
			 xmlns:viewModels="clr-namespace:HWdB.ViewModels"
			 Height="600"
			 Width="1200"
		Background="WhiteSmoke"
		HorizontalAlignment="Stretch" 
		VerticalAlignment="Stretch">
	<UserControl.Resources>
		<SolidColorBrush x:Key="brushWatermarkBackground" Color="White" />
		<SolidColorBrush x:Key="brushWatermarkForeground" Color="LightSteelBlue" />
		<BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
		<utils:BooleanToForegroundConverter x:Key="BooleanToForegroundConverter" />
	</UserControl.Resources>
    <Grid>
        <Grid.Resources>
			<DataTemplate x:Key="listBoxTemplate"  >
                <StackPanel FlowDirection="LeftToRight" >
                    <DockPanel >
                        <TextBlock  FontSize="4" Width="65"  Text="{Binding Customer}" HorizontalAlignment="Left" FontWeight="Bold" Foreground="{Binding IsSelected, Converter={StaticResource BooleanToForegroundConverter}}" />
                        <TextBlock  FontSize="4" Width="30" Text="{Binding Version}" HorizontalAlignment="Left"  FontWeight="Bold" Foreground="{Binding IsSelected, Converter={StaticResource BooleanToForegroundConverter}}"/>
                        <TextBlock  FontSize="4" Width="35" Text="{Binding TotalStock}" HorizontalAlignment="Left"  FontWeight="Bold" Foreground="{Binding IsSelected, Converter={StaticResource BooleanToForegroundConverter}}"/>
                        <TextBlock   FontSize="4" Width="60" Text="{Binding CreatedBy}" HorizontalAlignment="Left"  FontWeight="Bold" Foreground="{Binding IsSelected, Converter={StaticResource BooleanToForegroundConverter}}"/>
                    </DockPanel>
				</StackPanel>
			</DataTemplate>
		</Grid.Resources>
        <Viewbox Stretch="Uniform"  >
            <Grid Height="250" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="190" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="100"/>
				</Grid.ColumnDefinitions>
                <Grid Grid.Row="1" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="65"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="58"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock  Grid.Row="0"  Grid.Column="1"  HorizontalAlignment="Left"  Text="Customer"  FontSize="5" FontWeight="Bold"  />
                    <TextBlock  Grid.Row="0"  Grid.Column="2" Padding="0,0,0,0"  HorizontalAlignment="Left"  Text="Version"  FontSize="5" FontWeight="Bold" Margin="0,3,0,0" />
                    <TextBlock  Grid.Row="0"  Grid.Column="4" Padding="0,0,0,0"  HorizontalAlignment="Left"  Text="Created By"  FontSize="5" FontWeight="Bold" Margin="0,3,0,0" />
                </Grid>
				<Border BorderBrush='Black'  BorderThickness='1,0,1,1' Grid.Column="0" Grid.RowSpan="4"/>
                <Grid Row ="0" Column="0">
                    <Border BorderBrush='White'  BorderThickness='1,1,0,0'>
                        <Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
                    </Border>
                </Grid>
                <Label Grid.Row="0" Grid.Column="0" Padding="0,0,0,3" Margin="0,1,1,0" HorizontalAlignment="Center" Content="Stored Data Sets" FontSize="10" FontWeight="Bold"/>
                <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Margin="0,0,0,5">
                    <ListBox  IsSynchronizedWithCurrentItem="True" Name="LtbDataSetBox" HorizontalAlignment="Center"  ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding Path=LtbDataSetsObs}" ItemTemplate="{StaticResource listBoxTemplate}"  SelectedItem="{Binding SelectedListBoxItem}"  SelectedIndex ="{Binding SelectedIndex}"   Height="200" Width="190" />
                </StackPanel>
                <Button  Name="Next" Command="{Binding NextCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11" Grid.Row="4" Grid.Column="0"  HorizontalAlignment="Right" FontSize="4" FontWeight="Bold" Margin="0,0,15,0">Next</Button>
                <Button  Name="Previous" Command="{Binding PreviousCommand}" CommandParameter="{Binding ElementName=This}" Width="27" Height="11" Grid.Row="4" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="4" FontWeight="Bold" Margin="15,4,0,0">Previous</Button>
            </Grid>
		</Viewbox>
		<Viewbox Stretch="Uniform">
			<Grid Height="250">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="100"/>
					<ColumnDefinition Width="100"/>
				</Grid.ColumnDefinitions>
				<Grid Row ="0" Column="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="0" Grid.Column="2" Padding="0,0,0,3" Margin="0,1,1,0" HorizontalAlignment="Center" Content="{Binding ButtonName}" FontSize="10" FontWeight="Bold"/>
			</Grid>
		</Viewbox>

		<Viewbox Stretch="Uniform">
			<Grid Height="250" DataContext="{Binding CurrentLtbDataSet, ValidatesOnDataErrors=True}">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="50"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="60"/>
					<ColumnDefinition Width="60"/>
					<ColumnDefinition Width="30"/>
				</Grid.ColumnDefinitions>
				<Grid Row="4"  Column="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="4"  Grid.Column="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Life Time Buy:" FontSize="4" FontWeight="Bold" />
				<Grid Grid.Row="4" Grid.Column="3">
					<Viewbox HorizontalAlignment="Left" Margin="1,0,0,0">
                        <DatePicker TabIndex="3"  Language="de-de" Name="LTBDate"  SelectedDate="{Binding LTBDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" FontSize="10" FontWeight="Bold" Padding="0,2,0,0"/>
					</Viewbox>
				</Grid>
				<Grid Row="4"  Column="4">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="4"  Grid.Column="4" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="End of Service:" FontSize="4" FontWeight="Bold" />
				<Grid Grid.Row="4" Grid.Column="5" >
					<Viewbox HorizontalAlignment="Left" Margin="1,0,0,0" >
                        <DatePicker TabIndex="4"  Language="de-de" Name="EOSDate" SelectedDate="{Binding EOSDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" FontSize="10" FontWeight="Bold" Padding="0,2,0,0"/>
					   </Viewbox>
				</Grid>
			</Grid>
		</Viewbox>
		<Viewbox Stretch="Uniform">
			<Grid Height="250" DataContext="{Binding CurrentLtbDataSet, ValidatesOnDataErrors=True}">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="60"/>
					<ColumnDefinition Width="30"/>
					<ColumnDefinition Width="40"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="40"/>
				</Grid.ColumnDefinitions>
				<Grid Row="6"  Column="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="6"  Grid.Column="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Confidence Level:" FontSize="4" FontWeight="Bold" />
				<Grid Grid.Row="6"  Grid.Column="3" >
				</Grid>
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="6" Grid.Column="3" Width="40">
                    <ComboBox  TabIndex="5" Text="{Binding ConfidenceLevel}" Name="ConfidenceLevel" FontSize="5" FontWeight="Bold"   Padding="8,1,0,0" Width="50" Height="12" Background="White" >
						<ComboBoxItem>60%</ComboBoxItem>
						<ComboBoxItem>70%</ComboBoxItem>
						<ComboBoxItem>80%</ComboBoxItem>
						<ComboBoxItem>90%</ComboBoxItem>
						<ComboBoxItem>95%</ComboBoxItem>
						<ComboBoxItem>99,5%</ComboBoxItem>
					</ComboBox>
				</Border>
				<Grid Row="6"  Column="4" >
					<Border BorderBrush='White'  BorderThickness='1,1,0,0' >
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="6"  Grid.Column="4" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Repair Lead Time [2 - 365]:" FontSize="4" FontWeight="Bold"  />
				<Border HorizontalAlignment="Left" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="6" Grid.Column="5" Width="20" Height="10">
                    <TextBox  TabIndex="6" BorderThickness="1"  x:Name="RepairLeadTime" Text="{Binding RepairLeadTime, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Padding="0,0,0,0"  FontSize="5" FontWeight="Bold" Width="20" Height="10" HorizontalAlignment="Left"/>
				</Border>
			</Grid>
		</Viewbox>
		<Viewbox Stretch="Uniform">
			<Grid Height="250" DataContext="{Binding CurrentLtbDataSet, ValidatesOnDataErrors=True}">
				<Grid.RowDefinitions>
					<RowDefinition Height="20"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
					<RowDefinition Height="10"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="60"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
					<ColumnDefinition Width="20"/>
				</Grid.ColumnDefinitions>
				<Grid Row="4"  Column="9" Grid.ColumnSpan="2">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="4"  Grid.Column="9" Grid.ColumnSpan="2" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Service Days:" FontSize="4" FontWeight="Bold" />
				<Border HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush='White'  BorderThickness='0,0,0,0'  Grid.Row="4" Grid.Column="11">
					<TextBox  BorderThickness="1"  x:Name="ServiceDays" Text="{Binding ServiceDays}" Padding="0,0,0,0" FontSize="4" FontWeight="Bold" IsEnabled="False"/>
				</Border>
				<Grid Row="8"  Column="1">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
                <Label Grid.Row="8"  Grid.Column="1" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Installed Base [0 - 99999]:" FontSize="4" FontWeight="Bold" />
                <TextBlock Grid.Row="7"  Grid.Column="2" Padding="0,0,0,0" Margin="0,4,7,0" HorizontalAlignment="Right" Name="l0" Text="{Binding l0}"  FontSize="4" FontWeight="Bold" Foreground="Red" />
				<TextBlock Grid.Row="7"  Grid.Column="3" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l1" Text="{Binding l1}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="4" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l2" Text="{Binding l2}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="5" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l3" Text="{Binding l3}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="6" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l4" Text="{Binding l4}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="7" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l5" Text="{Binding l5}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="8" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l6" Text="{Binding l6}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="9" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l7" Text="{Binding l7}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="10" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l8" Text="{Binding l8}"  FontSize="4" FontWeight="Bold" />
				<TextBlock Grid.Row="7"  Grid.Column="11" Padding="0,0,0,0" Margin="0,4,5,0" HorizontalAlignment="Right" Name="l9" Text="{Binding l9}"  FontSize="4" FontWeight="Bold" />				
				<Grid Grid.Row="8"  Grid.Column="2" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB0" FontSize="4" Visibility="{Binding ElementName=IB0, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="9" BorderThickness="1"  x:Name="IB0" Text="{Binding IB0, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" Padding="0,0,0,0"   FontSize="4" Background="Transparent"   />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="3" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB1" FontSize="4" Visibility="{Binding ElementName=IB1, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="10" BorderThickness="1"  x:Name="IB1" Text="{Binding IB1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB1IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="4" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB2" FontSize="4" Visibility="{Binding ElementName=IB2, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="11" BorderThickness="1"  x:Name="IB2" Text="{Binding IB2, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB2IsEnabled}" Padding="0,0,0,0"   FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="5" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB3" FontSize="4" Visibility="{Binding ElementName=IB3, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="12" BorderThickness="1"  x:Name="IB3" Text="{Binding IB3, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB3IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="6" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB4" FontSize="4" Visibility="{Binding ElementName=IB4, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="13" BorderThickness="1"  x:Name="IB4" Text="{Binding IB4, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB4IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="7" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB5" FontSize="4" Visibility="{Binding ElementName=IB5, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="14" BorderThickness="1"  x:Name="IB5" Text="{Binding IB5, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB5IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="8" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB6" FontSize="4" Visibility="{Binding ElementName=IB6, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="15" BorderThickness="1"  x:Name="IB6" Text="{Binding IB6, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB6IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="9" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB7" FontSize="4" Visibility="{Binding ElementName=IB7, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="16" BorderThickness="1"  x:Name="IB7" Text="{Binding IB7, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB7IsEnabled}"  Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="10" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB8" FontSize="4" Visibility="{Binding ElementName=IB8, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox  TabIndex="17"  BorderThickness="1"  x:Name="IB8" Text="{Binding IB8, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB8IsEnabled}" Padding="0,0,0,0"   FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="11" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="IB9" FontSize="4" Visibility="{Binding ElementName=IB9, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox  TabIndex="18"  BorderThickness="1"  x:Name="IB9" Text="{Binding IB9, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB9IsEnabled}" Padding="0,0,0,0"   FontSize="4" Background="Transparent"  />
				</Grid>
				<Grid Grid.Row="8"  Grid.Column="12" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="" FontSize="4" Visibility="{Binding ElementName=IB10, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox  TabIndex="19"  BorderThickness="1"  x:Name="IB10" Text="{Binding IB10}" Padding="0,0,0,0"   FontSize="4" IsEnabled="False" Background="Transparent"  />
				</Grid>
				<Grid Row="9"  Column="1">
					<Border BorderBrush='White'  BorderThickness='1,1,0,0'>
						<Border BorderBrush='Black'  BorderThickness='0,0,1,1'/>
					</Border>
				</Grid>
				<Label Grid.Row="9"  Grid.Column="1" Padding="0,0,0,0" Margin="0,2,3,0" HorizontalAlignment="Right" Content="Failure Rate [0.00001 - 100]:" FontSize="4" FontWeight="Bold" />
				<Grid Grid.Row="9"  Grid.Column="2" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="FR0" FontSize="4" Visibility="{Binding ElementName=FR0, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox TabIndex="20" BorderThickness="1"  x:Name="FR0" Text="{Binding FR0, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  Padding="0,0,0,0"  FontSize="4" Background="Transparent"   />
				</Grid>
				<Grid Grid.Row="9"  Grid.Column="3" Background="{StaticResource brushWatermarkBackground}" >
					<Border BorderBrush='WhiteSmoke'  BorderThickness='2,1,0,1'/>
					<TextBlock Margin="5,2" Text="FR1" FontSize="4" Visibility="{Binding ElementName=FR1, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}" Foreground="{StaticResource brushWatermarkForeground}"/>
                    <TextBox  TabIndex="21"  BorderThickness="1"  x:Name="FR1" Text="{Binding FR1, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" IsEnabled="{Binding IB1IsEnabled}" Padding="0,0,0,0"  FontSize="4" Background="Transparent"  />
